/* pages/allCommentList/allCommentList.wxss */
Page{
 background-color: #F7F7F6;
}
.main{
    background-color: #F7F7F6;
    width: 100%;
    display: flex;
    flex-direction: column;
}
.mainTop{
    background-color: #ffffff;
    width: 100%;
    height: 70rpx;
    display: flex;
}
.mainToptip{
    height: 70rpx;
    line-height: 70rpx;
    color: #333333;
    font-size: 28rpx;
    margin-left: 20rpx;
}
.comentConetItem{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #ffffff;
}
.contentTopLine{
    /* margin-top: 10rpx; */
    background-color:#E8E8E8;
    width: 100%;
    height: 2rpx;
}
.contentUser{
    width: 100%;
    display: flex;
}
.userHeadImage{
    width: 48rpx;
    height: 48rpx;
    border-radius: 24rpx;
    margin-top: 20rpx;
    margin-left: 20rpx;
}
.userName{
    margin-top: 20rpx;
    margin-left: 20rpx;
    height: 48rpx;
    line-height: 48rpx;
    color: #333333;
    font-size: 28rpx;
}
.contentText{

    width: 710rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    color: #666666;
    font-size: 24rpx;
    /* white-space:pre-line; */


    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 0; 
}
.ImagePloader{
    width: 100%;
    display: flex;
   flex-direction: row;
   
} 
.showImage{
    width: 200rpx;
    margin-left: 20rpx;
    display: flex;
}
.upImage{
    width: 200rpx;
    position: relative;
}