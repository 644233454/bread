/*mask*/
.drawer_screen {
width: 100%;
height: 100%;
position: fixed;
left: 0;
  top: 0;
  right: 0;
  bottom: 0;
z-index: 1000;
background: #000;
opacity: 0.5;
overflow: hidden;
}

/*content*/
.drawer_box {
width: 76%;
overflow: hidden;
position: fixed;
top: 50%;
left: 0;
z-index: 1001;
background: #fafafa;
margin: -150px 12% 0 12%;
border-radius: 3px;
}

.drawer_title {
padding: 15px;
text-align: center;
background-color: gazure;
}