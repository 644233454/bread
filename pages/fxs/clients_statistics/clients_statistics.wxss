page {
  height: 100%;
  width: 100%;
  background-color: #f7f7f6;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
}

/*搜索框*/

.search-wrapper {
  width: 100%;
  /*不放大，不缩小,固定高度100rpx*/
  flex: 0 0 110rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.input_search {
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 65rpx;
  height: 70rpx;
  width: 560rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  text-align: center;
}

.searchcion {
  margin-left: 20rpx;
}

#v_list {
  width: 100%;
  /*分配其他元素后，自己充满屏幕*/
  flex: 1;
}

#v_listHead {
  margin-left: 30rpx;
  margin-top: 15rpx;
}

#tv_listHeadOne {
  color: #999;
  font-size: 26rpx;
  margin-right: 6rpx;
}

#tv_listHeadTwo {
  color: #999;
  font-size: 26rpx;
  margin-left: 6rpx;
}

#tv_listHeadCustomeNumber {
  color: #333;
  font-size: 26rpx;
}

.v_item {
  width: 690rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 270rpx;
  background-color: white;
  border-radius: 15rpx;
  display: flex;
}

#iv_head {
  width: 76rpx;
  height: 76rpx;
  background-color: gainsboro;
  margin-left: 26rpx;
  margin-top: 26rpx;
  border-radius: 38rpx;
}

#v_itemOne {
  margin-top: 26rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

#tv_name, #tv_volumeTransaction, #tv_orderNumber {
  color: #333;
  font-size: 28rpx;
}

#tv_volumeTransactionText, #tv_orderNumberText, #tv_latelyOrderTime,
#tv_comeFrom {
  color: #999;
  font-size: 26rpx;
}

#v_itemOneOne {
  margin-top: 18rpx;
}

#tv_orderNumberText {
  margin-left: 34rpx;
}

#tv_latelyOrderTime, #tv_comeFrom {
  margin-top: 13rpx;
}

#v_itemTwo {
  position: absolute;
  right: 50rpx;
  width: 120rpx;
  margin-top: 123rpx;
}

#v_itemTwoOne {
  width: 120rpx;
  height: 52rpx;
  background-color: #f3345c;
  border-radius: 26rpx;
  margin-bottom: 23rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

#tv_itemTwoOne {
  color: #fff;
  font-size: 24rpx;
}

#v_itemTwoTwo {
  width: 120rpx;
  height: 52rpx;
  border-radius: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #f97606;
}

#tv_itemTwoTwo {
  color: #f97606;
  font-size: 24rpx;
}

.sv_item {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.v_loading {
  width: 100%;
  height: 80rpx;
  padding-top: 40rpx;
  text-align: center;
}

.v_loadingComplete {
  width: 100%;
  margin-top: 30rpx;
  height: 80rpx;
  text-align: center;
}
